<!-- Contact Section -->
<section class="contact" id="contact">
    <div class="container">
        <h2 class="section-title">Contactez-Nous</h2>
        <div class="contact-grid">
            <div class="contact-info">
                <h3>Informations de Contact</h3>
                <div class="info-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <p>123 Avenue Christophe, Port-au-Prince, Haïti</p>
                </div>
                <div class="info-item">
                    <i class="fas fa-phone"></i>
                    <p>+509 34 56 7890</p>
                </div>
                <div class="info-item">
                    <i class="fas fa-envelope"></i>
                    <p>info@panosolaire.ht</p>
                </div>
                <div class="social-media">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
            <div class="contact-form">
                <form id="contactForm">
                    <div class="form-group">
                        <input type="text" id="name" placeholder="Votre Nom" required>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" placeholder="Votre Email" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="phone" placeholder="Votre Téléphone">
                    </div>
                    <div class="form-group">
                        <select id="service" required>
                            <option value="">Service Intéressé</option>
                            <option value="residential">Installation Résidentielle</option>
                            <option value="commercial">Solutions Commerciales</option>
                            <option value="storage">Stockage d'Énergie</option>
                            <option value="maintenance">Maintenance</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea id="message" rows="5" placeholder="Votre Message" required></textarea>
                    </div>
                    <button type="submit" class="btn">Envoyer le Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

   
