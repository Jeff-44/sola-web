<!-- Features Section HOME-->
<section class="section" id="about">
    <div class="section-title">
        <h2>Pourquoi choisir Sola?</h2>
        <p>Nous offrons les meilleures solutions énergétiques pour votre maison ou entreprise</p>
    </div>

    <div class="features-grid">
        <div class="feature-card fade-in">
            <i class="fas fa-bolt"></i>
            <h3>Haute Efficacité</h3>
            <p>Nos panneaux solaires offrent un rendement énergétique supérieur à 22%, parmi les meilleurs du marché.</p>
        </div>

        <div class="feature-card fade-in">
            <i class="fas fa-shield-alt"></i>
            <h3>Garantie 25 ans</h3>
            <p>Nos produits sont couverts par une garantie exceptionnelle de 25 ans sur la performance et les défauts.</p>
        </div>

        <div class="feature-card fade-in">
            <i class="fas fa-leaf"></i>
            <h3>Écologique</h3>
            <p>Réduisez votre empreinte carbone avec une énergie 100% propre et renouvelable.</p>
        </div>
    </div>
</section>

<!-- Inclure Bootstrap CSS -->
<section id="services" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Nos Services</h2>
        <div class="row g-4">

            @foreach (var service in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100">
                        <img src="@service.IconUrl" class="card-img-top" alt="@service.Name" />
                        <div class="card-body">
                            <h3 class="card-title">@service.Name</h3>
                            <p class="card-text">@service.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>



