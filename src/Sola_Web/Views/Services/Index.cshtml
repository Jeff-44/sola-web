@model IEnumerable<ApplicationCore.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container my-5">
    <div style="height:2rem; width:2rem;"></div>
    <h1>Services</h1>

    <p>
        <a asp-action="AddService">Create New</a>
    </p>
    <form asp-action="Index" method="get" class="mb-3">
        <div class="row g-2">
            <div class="col-md-4">
                <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                    <option value="">All Categories</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Active</th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.IsActive</td>
                    <td>@item.ServiceCategory?.Name</td>
                    <td>
                        <a asp-action="EditService" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="DeleteService" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
