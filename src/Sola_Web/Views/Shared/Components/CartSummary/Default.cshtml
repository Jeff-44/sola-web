@model int
<a asp-controller="Cart" asp-action="Index" class="cart-link position-relative text-decoration-none">
    <i class="fas fa-shopping-cart"></i>
    @if (Model > 0)
    {
        <span class="cart-count badge bg-danger position-absolute top-0 start-100 translate-middle">@Model</span>
    }
</a>
